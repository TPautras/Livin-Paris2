<Application x:Class="LivinParis_Graphique.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:LivinParis_Graphique"
             xmlns:viewModel="clr-namespace:LivinParis_Graphique.MVVM.ViewModel"
             xmlns:view="clr-namespace:LivinParis_Graphique.MVVM.View"
             xmlns:core="clr-namespace:LivinParis_Graphique.Core">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Theme/MenuButtonTheme.xaml"/>
                <ResourceDictionary Source="Theme/Textbox Theme.xaml"/>
                <ResourceDictionary Source="Theme/PasswordButton Theme.xaml"/>
                <ResourceDictionary Source="Theme/ComboBox Theme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <DataTemplate DataType="{x:Type viewModel:HomeViewModel}">
                <view:HomeView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewModel:DiscoveryViewModel}">
                <view:DiscoveryView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewModel:ClientViewModel}">
                <view:ClientView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewModel:CookViewModel}">
                <view:CookView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewModel:CompanyViewModel}">
                <view:CompanyView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewModel:VoirPlatsViewModel}">
                <view:VoirPlatsView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewModel:AjouterPlatViewModel}">
                <view:AjouterPlatView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewModel:CreerRecetteViewModel}">
                <view:CreerRecetteView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewModel:VoirCommandesViewModel}">
                <view:VoirCommandeView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewModel:AdminViewModel}">
                <view:AdminView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewModel:GestionPersonnesViewModel}">
                <view:GestionPersonnesView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewModel:PersonneDetailsViewModel}">
                <view:PersonneDetailsView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewModel:GestionCommandesViewModel}">
                <view:GestionCommandesView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewModel:CommandeDetailsViewModel}">
                <view:CommandeDetailView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewModel:StatistiquesViewModel}">
                <view:StatistiquesView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewModel:AutreViewModel}">
                <view:AutreView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewModel:ForgotPasswordViewModel}">
                <view:ForgotPasswordView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewModel:PasswordReminderViewModel}">
                <view:PasswordReminderView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewModel:ExploreViewModel}">
                <view:ExploreView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewModel:PlatDetailViewModel}">
                <view:PlatDetailView/>
            </DataTemplate>
        </ResourceDictionary>
    </Application.Resources>
</Application>
