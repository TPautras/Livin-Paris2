<Window x:Class="LivinParis_Graphique.MVVM.View.CompanyView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Livin'Paris - Entreprise" Height="400" Width="600"
        WindowStartupLocation="CenterScreen" Background="Transparent" AllowsTransparency="True">
    <Border Background="#272537" CornerRadius="10" Padding="20">
        <StackPanel>
            <TextBlock Text="{Binding WelcomeMessage}" Foreground="White" FontSize="18" FontWeight="Bold" />
            <TextBlock Text="Espace Entreprise" Foreground="White" FontSize="14" Margin="0,0,0,20"/>
            <!-- Contenu spécifique à l'entreprise -->
            <TextBlock Text="(Interface entreprise - fonctionnalités à implémenter)" 
                       Foreground="Gray" FontStyle="Italic"/>
        </StackPanel>
    </Border>
</Window>