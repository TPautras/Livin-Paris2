<Window x:Class="LivinParis_Graphique.MVVM.View.AdminView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Livin'Paris - Administrateur" Height="450" Width="700"
        WindowStartupLocation="CenterScreen" Background="Transparent" AllowsTransparency="True">
    <Border Background="#272537" CornerRadius="10" Padding="20">
        <StackPanel>
            <TextBlock Text="{Binding WelcomeMessage}" Foreground="White" FontSize="18" FontWeight="Bold"/>
            <TextBlock Text="Console d'administration" Foreground="White" FontSize="14" Margin="0,0,0,10"/>
            <!-- Section gestion des utilisateurs -->
            <Button Content="Gérer les utilisateurs" Margin="0,5" Padding="5"
                     IsEnabled="False"/>
            <!-- Section consultation des statistiques -->
            <Button Content="Voir les statistiques" Margin="0,5" Padding="5"
                     IsEnabled="False"/>
            <!-- etc. -->
            <TextBlock Text="(Fonctionnalités admin à implémenter)" Foreground="Gray" FontStyle="Italic" Margin="0,10,0,0"/>
        </StackPanel>
    </Border>
</Window>