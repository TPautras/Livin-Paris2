<UserControl x:Class="LivinParis_Graphique.MVVM.View.PersonneDetailsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="500"
             Background="Transparent">
    <Border Background="#2F2E41" CornerRadius="10" Padding="15">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <TextBlock Text="Détails de l'utilisateur" 
                         Foreground="White" 
                         FontSize="18" 
                         FontWeight="Bold"
                         Margin="0,0,0,15"/>
                
                <!-- Informations personnelles -->
                <GroupBox Header="Informations personnelles" Foreground="White" Margin="0,0,0,15">
                    <StackPanel Margin="0,10,0,0">
                        <!-- Nom -->
                        <DockPanel Margin="0,0,0,10">
                            <TextBlock Text="Nom:" 
                                   Foreground="White" 
                                   Width="120"/>
                            <TextBox Text="{Binding Nom, UpdateSourceTrigger=PropertyChanged}" 
                                 Style="{StaticResource ModernTextbox}"/>
                        </DockPanel>
                        
                        <!-- Prénom -->
                        <DockPanel Margin="0,0,0,10">
                            <TextBlock Text="Prénom:" 
                                   Foreground="White" 
                                   Width="120"/>
                            <TextBox Text="{Binding Prenom, UpdateSourceTrigger=PropertyChanged}" 
                                 Style="{StaticResource ModernTextbox}"/>
                        </DockPanel>
                        
                        <!-- Email -->
                        <DockPanel Margin="0,0,0,10">
                            <TextBlock Text="Email:" 
                                   Foreground="White" 
                                   Width="120"/>
                            <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" 
                                 Style="{StaticResource ModernTextbox}"/>
                        </DockPanel>
                        
                        <!-- Téléphone -->
                        <DockPanel Margin="0,0,0,10">
                            <TextBlock Text="Téléphone:" 
                                   Foreground="White" 
                                   Width="120"/>
                            <TextBox Text="{Binding Telephone, UpdateSourceTrigger=PropertyChanged}" 
                                 Style="{StaticResource ModernTextbox}"/>
                        </DockPanel>
                    </StackPanel>
                </GroupBox>
                
                <!-- Adresse -->
                <GroupBox Header="Adresse" Foreground="White" Margin="0,0,0,15">
                    <StackPanel Margin="0,10,0,0">
                        <!-- Rue -->
                        <DockPanel Margin="0,0,0,10">
                            <TextBlock Text="Rue:" 
                                   Foreground="White" 
                                   Width="120"/>
                            <TextBox Text="{Binding Adresse.Rue, UpdateSourceTrigger=PropertyChanged}" 
                                 Style="{StaticResource ModernTextbox}"/>
                        </DockPanel>
                        
                        <!-- Code postal -->
                        <DockPanel Margin="0,0,0,10">
                            <TextBlock Text="Code postal:" 
                                   Foreground="White" 
                                   Width="120"/>
                            <TextBox Text="{Binding Adresse.CodePostal, UpdateSourceTrigger=PropertyChanged}" 
                                 Style="{StaticResource ModernTextbox}"/>
                        </DockPanel>
                        
                        <!-- Ville -->
                        <DockPanel Margin="0,0,0,10">
                            <TextBlock Text="Ville:" 
                                   Foreground="White" 
                                   Width="120"/>
                            <TextBox Text="{Binding Adresse.Ville, UpdateSourceTrigger=PropertyChanged}" 
                                 Style="{StaticResource ModernTextbox}"/>
                        </DockPanel>
                        
                        <!-- Pays -->
                        <DockPanel Margin="0,0,0,10">
                            <TextBlock Text="Pays:" 
                                   Foreground="White" 
                                   Width="120"/>
                            <TextBox Text="{Binding Adresse.Pays, UpdateSourceTrigger=PropertyChanged}" 
                                 Style="{StaticResource ModernTextbox}"/>
                        </DockPanel>
                    </StackPanel>
                </GroupBox>
                
                <!-- Information de compte -->
                <GroupBox Header="Information de compte" Foreground="White" Margin="0,0,0,15">
                    <StackPanel Margin="0,10,0,0">
                        <!-- Nom d'utilisateur -->
                        <DockPanel Margin="0,0,0,10">
                            <TextBlock Text="Nom d'utilisateur:" 
                                   Foreground="White" 
                                   Width="120"/>
                            <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" 
                                 Style="{StaticResource ModernTextbox}"
                                 IsEnabled="{Binding IsNewUser}"/>
                        </DockPanel>
                        
                        <!-- Mot de passe -->
                        <DockPanel Margin="0,0,0,10">
                            <TextBlock Text="Mot de passe:" 
                                   Foreground="White" 
                                   Width="120"/>
                            <PasswordBox x:Name="PasswordBox" 
                                     Style="{StaticResource ModernPasswordBox}"/>
                        </DockPanel>
                        
                        <!-- Rôle -->
                        <DockPanel Margin="0,0,0,10" Visibility="{Binding IsAdminMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <TextBlock Text="Rôle:" 
                                   Foreground="White" 
                                   Width="120"/>
                            <ComboBox ItemsSource="{Binding AvailableRoles}"
                                  SelectedItem="{Binding SelectedRole}"
                                  Style="{StaticResource ModernComboBox}"/>
                        </DockPanel>
                        
                        <!-- Admin -->
                        <DockPanel Margin="0,0,0,10" Visibility="{Binding IsAdminMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <TextBlock Text="Admin:" 
                                   Foreground="White" 
                                   Width="120"/>
                            <CheckBox IsChecked="{Binding IsAdmin}" 
                                  VerticalAlignment="Center"/>
                        </DockPanel>
                    </StackPanel>
                </GroupBox>
                
                <!-- Préférences -->
                <GroupBox Header="Préférences" Foreground="White" Margin="0,0,0,15">
                    <StackPanel Margin="0,10,0,0">
                        <!-- Notifications -->
                        <DockPanel Margin="0,0,0,10">
                            <TextBlock Text="Notifications:" 
                                   Foreground="White" 
                                   Width="120"/>
                            <CheckBox IsChecked="{Binding Preferences.EnableNotifications}" 
                                  VerticalAlignment="Center"/>
                        </DockPanel>
                        
                        <!-- Newsletter -->
                        <DockPanel Margin="0,0,0,10">
                            <TextBlock Text="Newsletter:" 
                                   Foreground="White" 
                                   Width="120"/>
                            <CheckBox IsChecked="{Binding Preferences.SubscribeNewsletter}" 
                                  VerticalAlignment="Center"/>
                        </DockPanel>
                    </StackPanel>
                </GroupBox>
                
                <!-- Boutons -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                    <RadioButton Content="Annuler" 
                              Style="{StaticResource MenuButtonTheme}"
                              Command="{Binding CancelCommand}"
                              Margin="0,0,10,0"/>
                    
                    <RadioButton Content="Enregistrer" 
                              Style="{StaticResource MenuButtonTheme}"
                              Command="{Binding SaveCommand}"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Border>
</UserControl>