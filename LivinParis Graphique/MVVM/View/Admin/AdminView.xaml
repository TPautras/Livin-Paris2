<Window x:Class="LivinParis_Graphique.MVVM.View.AdminView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Livin'Paris - Administrateur" Height="700" Width="1000"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen" Background="Transparent" AllowsTransparency="True">
    <Border Background="#272537" CornerRadius="10">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            
            <Grid.RowDefinitions>
                <RowDefinition Height="75"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            
            <!-- En-tête -->
            <TextBlock Text="{Binding WelcomeMessage}" 
                       Grid.Column="0"
                       VerticalAlignment="Center"
                       Foreground="White"
                       FontSize="16"
                       Margin="20,0,0,0"
                       TextWrapping="Wrap"/>
            
            <TextBlock Text="Console d'administration" 
                       Grid.Column="1"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left"
                       Foreground="White"
                       FontSize="22"
                       FontWeight="Bold"
                       Margin="20,0,0,0"/>
            
            <!-- Menu latéral -->
            <StackPanel Grid.Row="1">
                <RadioButton Content="Gérer les utilisateurs"
                             Height="50"
                             Foreground="White"
                             FontSize="14"
                             Style="{StaticResource MenuButtonTheme}"
                             IsChecked="True"
                             Command="{Binding ShowGestionPersonnesCommand}"/>
                
                <RadioButton Content="Gérer les commandes"
                             Height="50"
                             Foreground="White"
                             FontSize="14"
                             Style="{StaticResource MenuButtonTheme}"
                             IsEnabled="False"/>
                
                <RadioButton Content="Statistiques"
                             Height="50"
                             Foreground="White"
                             FontSize="14"
                             Style="{StaticResource MenuButtonTheme}"
                             IsEnabled="False"/>
                
                <RadioButton Content="Autre"
                             Height="50"
                             Foreground="White"
                             FontSize="14"
                             Style="{StaticResource MenuButtonTheme}"
                             IsEnabled="False"/>
                
                <Button Content="Déconnexion"
                        Height="50"
                        Foreground="White"
                        FontSize="14"
                        Margin="0,20,0,0"
                        Background="#4C4A62"
                        BorderBrush="{x:Null}"
                        Command="{Binding LogoutCommand}"/>
            </StackPanel>
            
            <!-- Zone de contenu principal -->
            <ContentControl 
                Grid.Row="1"
                Grid.Column="1"
                Margin="10"
                Content="{Binding CurrentView}"/>
        </Grid>
    </Border>
</Window>