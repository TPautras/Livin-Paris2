<Window x:Class="LivinParis_Graphique.MVVM.View.ClientView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:LivinParis_Graphique.MVVM.ViewModel"
        WindowStyle="None"
        Title="Livin'Paris - Client" Height="500" Width="800"
        WindowStartupLocation="CenterScreen" Background="Transparent" AllowsTransparency="True">
    <Border Background="#272537" CornerRadius="20" Padding="10">
        <Grid>
            <!-- Définition de la grille : menu à gauche, contenu à droite -->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>   <!-- Colonne menu -->
                <ColumnDefinition Width="*"/>     <!-- Colonne contenu -->
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="75"/>      <!-- En-tête -->
                <RowDefinition Height="*"/>       <!-- Contenu principal -->
            </Grid.RowDefinitions>

            <!-- En-tête avec le nom de l'application et éventuellement le nom du client -->
            <TextBlock Grid.Row="0" Grid.ColumnSpan="2" Text="Livin'Paris - Espace Client" 
                       Foreground="White" FontSize="20" VerticalAlignment="Center"
                       FontFamily="/Fonts/#Poppins" Margin="20,0,0,0"/>
            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding WelcomeMessage}" 
                       Foreground="White" FontSize="14" VerticalAlignment="Center"
                       HorizontalAlignment="Right" Margin="0,0,20,0"/>

            <!-- Menu latéral (colonne 0, ligne 1) -->
            <StackPanel Grid.Row="1" Grid.Column="0" Margin="10,0">
                <RadioButton Content="Home" Height="50" Foreground="White" FontSize="14"
                             Style="{StaticResource MenuButtonTheme}" IsChecked="True"
                             Command="{Binding MainVM.HomeViewCommand}"/>
                <RadioButton Content="Découvrir" Height="50" Foreground="White" FontSize="14"
                             Style="{StaticResource MenuButtonTheme}"
                             Command="{Binding MainVM.DiscoveryViewCommand}"/>
                <!-- On peut ajouter d'autres boutons si nécessaire -->
            </StackPanel>

            <!-- Zone de contenu (colonne 1, ligne 1) -->
            <ContentControl Grid.Row="1" Grid.Column="1" Margin="10"
                            Content="{Binding MainVM.CurrentView}"/>
        </Grid>
    </Border>
</Window>
