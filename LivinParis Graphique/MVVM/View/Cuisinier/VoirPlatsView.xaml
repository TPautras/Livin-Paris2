<UserControl x:Class="LivinParis_Graphique.MVVM.View.VoirPlatsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="Liste de vos plats :" Foreground="White" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
        <ListBox Grid.Row="1" ItemsSource="{Binding Plats}">
            <!-- Style des éléments : texte blanc sur fond sombre -->
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="Background" Value="#3A3849"/>
                </Style>
            </ListBox.ItemContainerStyle>
        </ListBox>
    </Grid>
</UserControl>