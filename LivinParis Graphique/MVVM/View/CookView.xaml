<Window x:Class="LivinParis_Graphique.MVVM.View.CookView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Livin'Paris - Cuisinier" Height="400" Width="600"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen" Background="Transparent" AllowsTransparency="True">
    <Border Background="#272537" CornerRadius="10" Padding="20">
        <StackPanel>
            <TextBlock Text="{Binding WelcomeMessage}" Foreground="White" FontSize="18" FontWeight="Bold" />
            <TextBlock Text="Espace Cuisinier" Foreground="White" FontSize="14" Margin="0,0,0,20"/>
            <!-- Contenu spécifique au cuisinier -->
            <!-- Par exemple, liste des commandes à préparer : -->
            <!--
            <ItemsControl ItemsSource="{Binding CommandesEnCours}">
                ...
            </ItemsControl>
            -->
            <TextBlock Text="(Interface cuisinier - fonctionnalités à implémenter)" 
                       Foreground="Gray" FontStyle="Italic"/>
        </StackPanel>
    </Border>
</Window>